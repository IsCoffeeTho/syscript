let mutable: uint64 = 0;

class Animal {
	name: string;
	sound: string;
	Animal(name: string, sound: string) {
		this.name = name;
		this.sound = sound;
	}
	
	speak() {
		print(this.name, ":", this.sound);
	}
}

class Dog extends Animal {
	Dog(name: string) {
		super(name, "Bark!");
	}
}

struct Person {
	name: string;
	pet: Animal;
}

fn play_with_pet(of: Person): void {
	let announcement: string = of.name;
	announcement += " is petting";
	announcement += of.pet.name;
	print(announcement);
	of.pet.speak();
}

